<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mahasiswa.menuqiroah.MahasiswaMateriDetailQiroahActivity">

    <ImageView
        android:id="@+id/iv_logo_back_circle_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_circle_left_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/tv_title_menu_detail_qiroah"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/inter_bold"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_logo_back_circle_button"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Materi Qiroah > Hukum Non Sukun dan Tanwin"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/tv_description_menu_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/inter_medium"
        android:justificationMode="inter_word"
        android:textColor="@color/black_090A0A"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title_menu_detail_qiroah"
        tools:targetApi="o"
        tools:text="Berikut adalah file materi pembelajaran Hukum Nun Sukun dan tanwin." />


    <LinearLayout
        android:id="@+id/ll_documents_uploaded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_description_menu_detail"
        android:background="@drawable/list_shape"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="16dp"
        android:padding="6dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_logo_document"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_documentwithtext"/>
        <TextView
            android:id="@+id/tv_name_document"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            tools:text="Materi 1.pdf"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/inter_medium"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:layout_weight="0.9"/>
        <ImageView
            android:id="@+id/iv_logo_download"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_download" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_insert_comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingHorizontal="10dp"
        android:layout_marginVertical="32dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:fontFamily="@font/inter_medium"
            android:text="Komentar"
            android:textSize="16sp"
            app:drawableLeftCompat="@drawable/ic_logo_comments"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/ll_insert_comments"
            android:gravity="center_vertical"
            android:drawablePadding="16dp"/>
        <include layout="@layout/layout_komentar"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>