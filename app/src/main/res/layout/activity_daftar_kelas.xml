<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:id="@+id/action_bar_daftarkelas"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        style="@style/action_bar_blue"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_action_bar_daftarkelas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_action_bar_daftarkelas"
        android:fontFamily="@font/inter_bold"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/action_bar_daftarkelas"
        app:layout_constraintBottom_toBottomOf="@id/action_bar_daftarkelas"
        android:layout_marginStart="30dp"/>

    <ImageView
        android:id="@+id/ic_buatkelas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_buat_kelas"
        app:layout_constraintTop_toBottomOf="@id/action_bar_daftarkelas"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/tv_buatkelas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_buatkelas"
        android:fontFamily="@font/inter_medium"
        android:textSize="16sp"
        android:textColor="@color/black_090A0A"
        app:layout_constraintTop_toTopOf="@id/ic_buatkelas"
        app:layout_constraintBottom_toBottomOf="@id/ic_buatkelas"
        app:layout_constraintStart_toEndOf="@id/ic_buatkelas"
        android:layout_marginStart="3dp"/>

    <ImageView
        android:id="@+id/img_daftarkelas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_daftar_kelas"
        app:layout_constraintTop_toBottomOf="@+id/ic_buatkelas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"/>

    <ImageView
        android:id="@+id/ic_detail_kelas"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_detail_kelas"
        app:layout_constraintStart_toStartOf="@id/img_daftarkelas"
        app:layout_constraintTop_toTopOf="@id/img_daftarkelas"
        app:layout_constraintBottom_toBottomOf="@id/img_daftarkelas"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/tv_namakelas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/tv_namakelas"
        android:fontFamily="@font/inter_bold"
        android:textSize="24sp"
        android:textColor="@color/navy_06283D"
        app:layout_constraintTop_toTopOf="@id/img_daftarkelas"
        app:layout_constraintStart_toEndOf="@id/ic_detail_kelas"
        android:layout_marginTop="2dp"
        android:layout_marginStart="12dp"/>

    <TextView
        android:id="@+id/tv_ruangkelas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/tv_ruangkelas"
        android:fontFamily="@font/inter_medium"
        android:textSize="15sp"
        android:textColor="@color/grey_636363"
        app:layout_constraintTop_toBottomOf="@id/tv_namakelas"
        app:layout_constraintStart_toStartOf="@id/tv_namakelas"/>

    <TextView
        android:id="@+id/tv_jadwalkelas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/tv_jadwalkelas"
        android:fontFamily="@font/inter"
        android:textSize="16sp"
        android:textColor="@color/grey_8B9596"
        app:layout_constraintStart_toStartOf="@id/tv_namakelas"
        app:layout_constraintTop_toBottomOf="@id/tv_ruangkelas"
        android:layout_marginTop="3dp"/>

    <TextView
        android:id="@+id/tv_anggotakelas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_anggotakelas"
        app:layout_constraintTop_toTopOf="@id/img_daftarkelas"
        app:layout_constraintEnd_toEndOf="@id/img_daftarkelas"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/tv_jumlah_anggotakelas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/tv_jumlah_anggotakelas"
        app:layout_constraintTop_toBottomOf="@id/tv_anggotakelas"
        app:layout_constraintStart_toStartOf="@id/tv_anggotakelas"
        app:layout_constraintEnd_toEndOf="@id/tv_anggotakelas"
        android:layout_marginTop="2dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>