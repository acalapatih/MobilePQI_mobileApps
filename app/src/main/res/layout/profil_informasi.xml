<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="34dp"
            android:layout_height="32dp"
            android:src="@drawable/img_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="18dp"/>

        <TextView
            android:id="@+id/tv_navbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_navbar_informasi"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/img_back"
            app:layout_constraintTop_toTopOf="@id/img_back"
            app:layout_constraintBottom_toBottomOf="@id/img_back"
            android:layout_marginStart="5dp"/>

        <ImageView
            android:id="@+id/img_profil"
            android:layout_width="90dp"
            android:layout_height="84dp"
            android:src="@drawable/img_user"
            app:layout_constraintStart_toStartOf="@id/tv_navbar"
            app:layout_constraintTop_toBottomOf="@id/tv_navbar"
            android:layout_marginTop="12dp"/>

        <ImageView
            android:id="@+id/img_edit_profil"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:src="@drawable/img_edit_profil"
            app:layout_constraintStart_toStartOf="@id/img_profil"
            app:layout_constraintEnd_toEndOf="@id/img_profil"
            app:layout_constraintTop_toBottomOf="@id/tv_navbar"
            android:layout_marginTop="75dp"/>

        <TextView
            android:id="@+id/tv_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_nama"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/img_profil"
            app:layout_constraintTop_toBottomOf="@id/tv_navbar"
            android:layout_marginTop="25dp"
            android:layout_marginStart="12dp"/>

        <TextView
            android:id="@+id/tv_nomor_induk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_nomor_induk"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/tv_nama"
            app:layout_constraintTop_toBottomOf="@id/tv_nama"/>

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_email"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/tv_nomor_induk"
            app:layout_constraintTop_toBottomOf="@id/tv_nomor_induk"/>

        <TextView
            android:id="@+id/tv_fakultas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_fakultas"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_profil"
            android:layout_marginTop="30dp"
            android:layout_marginStart="44dp"/>

        <ImageButton
            android:id="@+id/img_edit_fakultas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_edit"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@id/tv_fakultas"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp"/>

        <EditText
            android:id="@+id/input_fakultas"
            android:layout_width="300dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/tv_fakultas"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_prodi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_prodi"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/input_fakultas"
            android:layout_marginTop="12dp"
            android:layout_marginStart="44dp"/>

        <ImageView
            android:id="@+id/img_edit_prodi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_edit"
            app:layout_constraintTop_toBottomOf="@id/tv_prodi"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp"/>

        <EditText
            android:id="@+id/input_prodi"
            android:layout_width="300dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/tv_prodi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_password"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/input_prodi"
            android:layout_marginTop="12dp"
            android:layout_marginStart="44dp"/>

        <ImageView
            android:id="@+id/img_edit_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_edit"
            app:layout_constraintTop_toBottomOf="@id/tv_password"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp"/>

        <EditText
            android:id="@+id/input_password"
            android:layout_width="300dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/tv_password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_tglahir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_tglahir"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/input_password"
            android:layout_marginTop="12dp"
            android:layout_marginStart="44dp"/>

        <ImageView
            android:id="@+id/img_edit_tglahir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_edit"
            app:layout_constraintTop_toBottomOf="@id/tv_tglahir"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp"/>

        <EditText
            android:id="@+id/input_tglahir"
            android:layout_width="300dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/tv_tglahir"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_nohp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_nohp"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/input_tglahir"
            android:layout_marginTop="12dp"
            android:layout_marginStart="44dp"/>

        <ImageView
            android:id="@+id/img_edit_nohp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_edit"
            app:layout_constraintTop_toBottomOf="@id/tv_nohp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp"/>

        <EditText
            android:id="@+id/input_nohp"
            android:layout_width="300dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/tv_nohp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_alamat"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/input_nohp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="44dp"/>

        <ImageView
            android:id="@+id/img_edit_alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_edit"
            app:layout_constraintTop_toBottomOf="@id/tv_alamat"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp"/>

        <EditText
            android:id="@+id/input_alamat"
            android:layout_width="300dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/tv_alamat"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="195dp"
            android:layout_height="50dp"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="60dp"
            android:text="@string/btn_simpan"
            android:textColor="@color/white"
            style="@style/btn_navy_rounded"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/input_alamat"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>