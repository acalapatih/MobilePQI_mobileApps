<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/action_bar_buatkelas"
        style="@style/action_bar_blue"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_action_bar_buatkelas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/inter_bold"
        android:text="@string/tv_action_bar_buatkelas"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/action_bar_buatkelas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/action_bar_buatkelas" />

    <ImageView
        android:id="@+id/ic_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:contentDescription="@string/desc_iv_icon_close"
        android:src="@drawable/ic_close"
        app:layout_constraintBottom_toBottomOf="@id/action_bar_buatkelas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/action_bar_buatkelas" />

    <TextView
        android:id="@+id/tv_datakelas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/inter_bold"
        android:text="@string/tv_datakelas"
        android:textColor="@color/black_06283D"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/action_bar_buatkelas" />

    <View
        android:id="@+id/line_datakelas"
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/grey_DCE2E2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_datakelas" />

    <TextView
        android:id="@+id/tv_edit_namakelas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/inter_medium"
        android:text="@string/tv_edit_namakelas"
        android:textColor="@color/black_090A0A"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/tv_datakelas"
        app:layout_constraintTop_toBottomOf="@id/line_datakelas" />

    <EditText
        android:id="@+id/et_edit_namakelas"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:autofillHints=""
        android:hint="@string/et_hint_namakelas"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_edit_namakelas" />

    <TextView
        android:id="@+id/tv_edit_ruangkelas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/inter_medium"
        android:text="@string/tv_edit_ruangkelas"
        android:textColor="@color/black_090A0A"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/tv_datakelas"
        app:layout_constraintTop_toBottomOf="@id/et_edit_namakelas" />

    <EditText
        android:id="@+id/et_edit_ruangkelas"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:autofillHints=""
        android:hint="@string/et_hint_ruangkelas"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_edit_ruangkelas" />

    <TextView
        android:id="@+id/tv_edit_jadwalkelas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/inter_medium"
        android:text="@string/tv_edit_jadwalkelas"
        android:textColor="@color/black_090A0A"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/tv_datakelas"
        app:layout_constraintTop_toBottomOf="@id/et_edit_ruangkelas" />

    <EditText
        android:id="@+id/et_edit_jadwalkelas"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:autofillHints=""
        android:hint="@string/et_hint_jadwalkelas"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_edit_jadwalkelas" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_simpan_datakelas"
        style="@style/ButtonBlueRounded30dp"
        android:layout_width="195dp"
        android:layout_height="50dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="60dp"
        android:enabled="false"
        android:text="@string/btn_simpan"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_edit_jadwalkelas" />

</androidx.constraintlayout.widget.ConstraintLayout>