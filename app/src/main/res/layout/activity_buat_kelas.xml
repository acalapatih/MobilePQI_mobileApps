<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/action_bar_buatkelas"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        style="@style/action_bar_blue"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_action_bar_buatkelas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_action_bar_buatkelas"
        android:fontFamily="@font/inter_bold"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/action_bar_buatkelas"
        app:layout_constraintBottom_toBottomOf="@id/action_bar_buatkelas"
        android:layout_marginStart="30dp"/>

    <ImageView
        android:id="@+id/ic_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close"
        app:layout_constraintTop_toTopOf="@id/action_bar_buatkelas"
        app:layout_constraintBottom_toBottomOf="@id/action_bar_buatkelas"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:id="@+id/tv_datakelas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_datakelas"
        android:fontFamily="@font/inter_bold"
        android:textSize="20sp"
        android:textColor="@color/black_06283D"
        app:layout_constraintTop_toBottomOf="@id/action_bar_buatkelas"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"/>

    <View
        android:id="@+id/line_datakelas"
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:background="@color/grey_DCE2E2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_datakelas"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/tv_edit_namakelas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_edit_namakelas"
        android:fontFamily="@font/inter_medium"
        android:textSize="16sp"
        android:textColor="@color/black_090A0A"
        app:layout_constraintTop_toBottomOf="@id/line_datakelas"
        app:layout_constraintStart_toStartOf="@id/tv_datakelas"
        android:layout_marginTop="15dp"/>

    <EditText
        android:id="@+id/et_edit_namakelas"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintTop_toBottomOf="@id/tv_edit_namakelas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"/>

    <TextView
        android:id="@+id/tv_edit_ruangkelas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_edit_ruangkelas"
        android:fontFamily="@font/inter_medium"
        android:textSize="16sp"
        android:textColor="@color/black_090A0A"
        app:layout_constraintTop_toBottomOf="@id/et_edit_namakelas"
        app:layout_constraintStart_toStartOf="@id/tv_datakelas"
        android:layout_marginTop="15dp"/>

    <EditText
        android:id="@+id/et_edit_ruangkelas"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintTop_toBottomOf="@id/tv_edit_ruangkelas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"/>

    <TextView
        android:id="@+id/tv_edit_jadwalkelas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_edit_jadwalkelas"
        android:fontFamily="@font/inter_medium"
        android:textSize="16sp"
        android:textColor="@color/black_090A0A"
        app:layout_constraintTop_toBottomOf="@id/et_edit_ruangkelas"
        app:layout_constraintStart_toStartOf="@id/tv_datakelas"
        android:layout_marginTop="15dp"/>

    <EditText
        android:id="@+id/et_edit_jadwalkelas"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintTop_toBottomOf="@id/tv_edit_jadwalkelas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_simpan_datakelas"
        android:layout_width="195dp"
        android:layout_height="50dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="60dp"
        android:text="@string/btn_simpan"
        android:textColor="@color/white"
        style="@style/btn_navy_rounded"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_edit_jadwalkelas"/>

</androidx.constraintlayout.widget.ConstraintLayout>