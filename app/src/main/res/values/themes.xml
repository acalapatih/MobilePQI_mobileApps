<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MobilePQI" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <!-- Style rounded button -->
    <style name="ButtonBlueRounded30dp">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:background">@drawable/bg_button_blue_30dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="FieldRounded10dp">
        <item name="android:background">@drawable/bg_field_10dp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="UnfilledFieldRounded10dp">
        <item name="android:background">@drawable/bg_field_unfilled_10dp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="action_bar_blue">
        <item name="android:background">@drawable/bg_action_bar_blue</item>
    </style>

    <!--    Search Field-->
    <style name="view_search_dosen">
        <item name="android:background">@drawable/view_search_dosen</item>
    </style>

    <!--    Button Color-->
    <style name="btn_navy_rounded" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
